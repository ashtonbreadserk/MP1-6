#include <iostream>
#include <iomanip>
using namespace std;
class BMI {
private:
    double weight;  
    double height; 
public:
    BMI(double w, double h) {
        weight = w;
        height = h;
    }

    double calculateBMI() {
        return weight / (height * height);
    }

    void displayBMI() {
        cout << fixed << setprecision(2); 
        cout << "Weight: " << weight << " kg" << endl;
        cout << "Height: " << height << " m" << endl;
        cout << "Your BMI is: " << calculateBMI() << endl;
    }
};
int main() {
    double weight, height;

    cout << "Enter your weight in kilograms (kg): ";
    cin >> weight;
    cout << "Enter your height in meters (m): ";
    cin >> height;

    BMI person(weight, height);

    person.displayBMI();

    return 0;
}
